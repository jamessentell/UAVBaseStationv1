<Window x:Class="BaseStationv1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Base Station" Height="580" Width="880">
    <Grid>
        <Label Content="URI:" HorizontalAlignment="Left" Margin="68,10,0,0" VerticalAlignment="Top" Name="lblURI"/>

        <Image HorizontalAlignment="Left" Height="480" Margin="44,44,0,0" VerticalAlignment="Top" Width="640" Name="imgStreamDisplay" Stretch="None"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="104,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="278" Name="txbURI" Text="http://192.168.1.149:8080/?action=stream"/>
        <Button Content="Start Stream Capture" HorizontalAlignment="Left" Margin="410,12,0,0" VerticalAlignment="Top" Width="123" Name="btnStartCapture" Click="btnStartCapture_Click"/>
        <Button Name="btnStopCapture" Content="Stop Stream Capture" HorizontalAlignment="Left" Margin="575,12,0,0" VerticalAlignment="Top" Width="123" Click="btnStopCapture_Click"/>
        <Button x:Name="btnTest" Content="Test" HorizontalAlignment="Left" Margin="729,44,0,0" VerticalAlignment="Top" Width="123" Click="btnTest_Click"/>
        <Label Content="Control Buttons" HorizontalAlignment="Left" Margin="729,10,0,0" VerticalAlignment="Top" Width="123"/>


    </Grid>
</Window>
